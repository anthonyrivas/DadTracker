<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="mt-3">Checkpoints</h2>
        </div>
    </div>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            {{#each checkpoints}}
            <div class='card mx-auto'>
                <div class="card-header bg-dark text-white">
                    <div id="cp-type-{{id}}" class="float-left" style="padding: .375rem 0;">{{cpType}}</div>
                    <div id="cp-button-{{id}}" class="float-right">
                        <button type="button" class='btn btn-info editButton' data-id={{id}}>Edit</button>
                    </div>
                </div>
                {{!-- {{#if image}}
                <img class="card-img-top" src="{{imageUrl}}" alt="image-{{id}}"> {{/if}} --}}
                <div class="card-body">
                    <div id="cp-message-{{id}}" class="card-text">{{value}}</div>
                    <footer class="blockquote-footer">
                        Created: {{createdAt}}
                    </footer>
                </div>
            </div>
            <hr /> {{/each}}
        </div>
    </div>
</div>